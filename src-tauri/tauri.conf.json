{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "promptclip",
    "version": "0.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    },
    "allowlist": {
      "fs": {
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "scope": [
          "$APPDATA/*"
        ]
      },
      "globalShortcut": {
        "all": true
      },
      "path": {
        "all": true
      },
      "window": {
        "show": true,
        "hide": true,
        "setFocus": true,
        "setSize": true,
        "center": true,
        "setSkipTaskbar": true,
        "create": true,
        "all": false,
        "close": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true
      },
      "protocol": {}
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "com.magicul.promptclip",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.magicul.promptclip",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": [
        "app"
      ],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": "default-src promptclip: asset: https://asset.localhost img-src: 'self'"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "",
        "width": 728,
        "height": 646,
        "alwaysOnTop": true,
        "decorations": false,
        "transparent": true,
        "center": true,
        "skipTaskbar": true
      }
    ],
    "macOSPrivateApi": true
  }
}
